script(type="text/x-template")#slider-container
  .slider
    .slider__header
      .section-title.reviews__section-title Что обо мне говорят
      .slider__buttons
        button(type="button" @click="slide('prev')" ref="buttonPrev").round-btn.round-btn--pointer--right
        button(type="button" @click="slide('next')" ref="buttonNext").round-btn.round-btn--pointer--left
    swiper(ref="slider", :options="sliderOptions")
      swiper-slide(v-for="review in reviews" :key="review.id" ref="slides")
        .quote
          .slider__pic
            +image('content/left-quote.png', 'slider__pic-img')
          .quote__user
            .quote__text
              p {{review.text}}
            .user-display
              .user-display__avatar
                .user-display__avatar-style
                  img(:src="review.pic").user-display__pic
              .user-display__data
                .user-display__name {{review.name}}
                .user-display__occ {{review.occ}}
