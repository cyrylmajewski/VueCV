.user-display {
    display: flex;
    align-items: center;
}

.user-display__name {
    font-size: 18px;
    font-weight: 700;
}

.user-display__occ {
    opacity: 0.3;
}

.user-display__avatar {
    width: 74px;
    height: 74px;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 31px;
}
